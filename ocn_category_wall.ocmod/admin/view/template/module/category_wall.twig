{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <button type="submit" form="form-dashboard" data-bs-toggle="tooltip" title="{{ button_save }}"
                class="btn btn-primary"><i class="fa-solid fa-save"></i></button>
        <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}" class="btn btn-light"><i
              class="fa-solid fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-cogs"></i> {{ text_edit }}</div>
      <div class="card-body">
        <form id="form-dashboard" action="{{ save }}" method="post" data-oc-toggle="ajax">
          <fieldset>
            <legend>{{ text_general }}</legend>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label">{{ entry_status }}</label>
              <div class="col-sm-10">
                <div class="form-check form-switch form-switch-lg">
                  <input type="hidden" name="module_ocn_category_wall_status" value="0"/>
                  <input type="checkbox" name="module_ocn_category_wall_status" value="1" id="input-status"
                         class="form-check-input" {% if module_ocn_category_wall_status %}checked{% endif %} />
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label">{{ entry_description_status }}</label>
              <div class="col-sm-10">
                <div class="form-check form-switch form-switch-lg">
                  <input type="hidden" name="module_ocn_category_wall_description_status" value="0"/>
                  <input type="checkbox" name="module_ocn_category_wall_description_status" value="1" id="description-status"
                         class="form-check-input" {% if module_ocn_category_wall_description_status %}checked{% endif %} />
                </div>
              </div>
            </div>
            <div class="row mb-3">
              <label class="col-sm-2 col-form-label">{{ entry_subcategory_status }}</label>
              <div class="col-sm-10">
                <div class="form-check form-switch form-switch-lg">
                  <input type="hidden" name="module_ocn_category_wall_subcategory_status" value="0"/>
                  <input type="checkbox" name="module_ocn_category_wall_subcategory_status" value="1" id="sub-category-status"
                         class="form-check-input" {% if module_ocn_category_wall_subcategory_status %}checked{% endif %} />
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <legend>{{ text_image_size }}</legend>
            <div class="row mb-3 required">
              <label for="input-image-category-width" class="col-sm-2 col-form-label">
                {{ entry_image_category }}
              </label>
              <div class="col-sm-10">
                <div id="input-image-category" class="row">
                  <div class="col-sm-6">
                    <input type="text" name="module_ocn_category_wall_image_width"
                           value="{{ module_ocn_category_wall_image_width }}"
                           placeholder="{{ placeholder_image_width }}" id="input-image-category-width"
                           class="form-control"/>
                  </div>
                  <div class="col-sm-6">
                    <input type="text" name="module_ocn_category_wall_image_height"
                           value="{{ module_ocn_category_wall_image_height }}"
                           placeholder="{{ placeholder_image_height }}" id="input-image-category-height"
                           class="form-control"/>
                  </div>
                </div>
                <div id="error-image-category" class="invalid-feedback"></div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
